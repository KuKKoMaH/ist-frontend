@import "baron/baron.css"

.wrapper
  background: $grey
  padding: 4em 0 2em

.title
  margin: 0

.subtitle
  font-size: 2em
  font-weight: 200
  margin-bottom: 1em

.item
  font-size: 1.3em
  margin-bottom: .5em
  text-decoration: underline
  cursor: pointer
  transition: all .1s ease-out

  &:hover
    text-decoration: none

.item_active
  color: $green300
  text-decoration: none

.right
  position: relative
  margin-bottom: 2em

  &:before, &:after
    content: ''
    display: block
    position: absolute

  &:before
    background: url(modules/testimonials/sprite-tes-1.png)
    top: -60px
    left: -50px
  &:after
    background: url(modules/testimonials/sprite-tes-2.png)
    bottom: -60px
    right: -30px


.tabs
  position: relative
  background: $white
  border-radius: 3px
  height: 405px
  overflow: hidden
  z-index: 1
  box-shadow: 6px 6px 21px 0 rgba($black, .15)

.tab
  position: absolute
  opacity: 0
  top: 0
  width: 100%
  height: 100%
  z-index: 0
  transition: all .2s ease-out

  iframe
    width: 100%
    height: 100%

  :global
    .baron
      height: 85%

    .baron .baron__track
      opacity: 0;
      position: absolute;
      z-index: 3;
      top: 10px;
      bottom: 10px;
      right: 5px;
      width: 8px;
      border-radius: 5px;
      pointer-events: none;

    .baron._scrollbar .baron__track
      opacity: 1;

    .baron .baron__bar
      position: absolute;
      z-index: 1;
      width: 8px;
      border-radius: 3px;
      background: $black;
      opacity: .2;
      -webkit-transition: opacity .2s linear;
      transition: opacity .2s linear;
      pointer-events: auto;

    .baron .baron__bar:hover
      opacity: .5;

.tab_active
  position: relative
  opacity: 1
  z-index: 1

.content
  padding: 2em 2em 0 2em

.name
  font-size: 1.3em
  font-weight: bold
  margin-bottom: .5em

.position
  font-size: 1.1em
  font-weight: 200
  margin-bottom: .5em

.original
  position: absolute
  right: 1em
  bottom: 1em
  font-weight: bold
  text-decoration: underline
  opacity: .5

.nav
  font-family: 'Averin Next', sans-serif
  font-size: 1.5em
  font-weight: bold
  opacity: .5
  transition: all .1s ease-out
  cursor: pointer

  &:hover
    opacity: 1
    text-decoration: underline

.prev
  &:before
    content: ''
    display: inline-block
    vertical-align: middle
    background: url(modules/testimonials/sprite-arrow-left.png)
    margin-right: .5em

.next
  margin-left: 1.5em
  &:after
    content: ''
    display: inline-block
    vertical-align: middle
    background: url(modules/testimonials/sprite-arrow-right.png)
    margin-left: .5em
