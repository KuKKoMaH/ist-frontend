.wrapper
  position: relative

.map
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  background-size: cover

  @media (max-width: $breakpoint-sm - 1)
    position: static
    height: 400px

.block
  background: $white
  margin: 2em 0
  position: relative
  z-index: 1
  box-shadow: 6px 6px 21px 1px rgba($black, .15)
  border-radius: 3px
  padding: 2.5em 2em

  @media (max-width: $breakpoint-sm - 1)
    box-shadow: none
    margin-left: -($gutter-half)
    margin-right: -($gutter-half)
    padding: 1.5em 1em
    margin: 0

  p
    font-weight: 200
    line-height: 1.3
    margin: 0

  b
    display: block
    font-weight: bold
    margin: 1em 0 .5em


.title
  font-family: 'Averin Next', sans-serif
  font-size: 2.5em
  line-height: 1.1
  margin: 0

.photos
  text-align: justify
  line-height: 0

  &:after
    content: ''
    display: inline-block
    width: 100%

.photo
  max-width: 45%
  display: inline-block