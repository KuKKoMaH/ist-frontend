.wrapper
  padding: 3em 0


.title
  font-family: 'Averin Next', sans-serif
  font-size: 3.5em
  line-height: 1.1
  margin: 0 0 1em

.items
  text-align: justify
  word-spacing: 25px

  @media (max-width: $breakpoint-lg - 1)
    word-spacing: 35px

  @media (max-width: $breakpoint-sm - 1)
    text-align: center
    word-spacing: 5px

  &:after
    content: ''
    display: inline-block
    vertical-align: top
    width: 100%

.item
  display: inline-block
  vertical-align: middle
  transition: all .1s ease-out
  //cursor: pointer

  //&:hover
  //  opacity: .8

  @media (max-width: $breakpoint-sm - 1)
    margin-bottom: .5em

.image
  display: block