.button
  display: block
  width: 100%
  text-align: center
  border: 3px solid $white
  background: $white
  text-transform: uppercase
  font-weight: bold
  font-size: inherit
  font-family: inherit
  margin: 0
  padding: 15px 0
  box-shadow: 6px 6px 21px 1px rgba($black, .15)
  cursor: pointer
  transition: all .1s ease-out
  outline: 0
  border-radius: 0
  -webkit-appearance: none
  -moz-appearance: none

  &::-moz-focus-inner
    padding: 0
    margin: 0

  &:hover
    background-color: transparent
    box-shadow: 0 0 0 0 rgba($black, 0)
    color: $white

.fill
  padding: 14px 0
  font-size: .85em
  box-shadow: none
  background: $green600
  color: $white
  border: 0
  border-radius: 2px

  &:hover
    background: $green700