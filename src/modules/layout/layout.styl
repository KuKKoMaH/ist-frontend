@font-face
  font-family: 'Rouble'
  src: url('fonts/Rouble-Regular.eot')
  src: url('fonts/Rouble-Regular.eot') format('embedded-opentype'),
          url('fonts/Rouble-Regular.woff2') format('woff2'),
          url('fonts/Rouble-Regular.woff') format('woff')
  font-weight: normal

@font-face
  font-family: 'Averin Next'
  src: url('fonts/AvenirNextCyr-Bold.eot')
  src: url('fonts/AvenirNextCyr-Bold.eot') format('embedded-opentype'),
          url('fonts/AvenirNextCyr-Bold.woff2') format('woff2'),
          url('fonts/AvenirNextCyr-Bold.woff') format('woff')
  font-weight: 700
  font-style: normal

html
  margin: 0
  padding: 0
  font-family: 'Exo 2', sans-serif
  font-size: $font-size
  line-height: $line-height

  @media (max-width: $breakpoint-lg - 1)
    font-size: ($font-size * .875)

body
  margin: 0
  padding: 0
  //vertical-gradient()

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%

a
  color: inherit
  text-decoration: underline

  &:hover
    text-decoration: none

h1,
h2,
h3
  font-family: 'Averin Next', sans-serif
  line-height: 1.1

h1,
h2
  font-size: 3.5em
  @media (max-width: $breakpoint-md - 1)
    font-size: 3em

  @media (max-width: $breakpoint-sm - 1)
    font-size: 2em
    line-height: 1.3

:global
  .r
    font-family: 'Rouble'
    display: inline

  .w
    //width: 100%
    margin-left: auto
    margin-right: auto
    wrapper()
    @media (min-width: $breakpoint-sm) and (max-width $breakpoint-md - 1)
      width: $container-sm
    @media (min-width: $breakpoint-md) and (max-width $breakpoint-lg - 1)
      width: $container-md
    @media (min-width: $breakpoint-lg)
      width: $container-lg

  .wf
    wrapper()
    margin-left: -($gutter-half)
    margin-right: -($gutter-half)

    &:after
      content: ''
      display: table
      clear: both

  .w-c .c
    vertical-align: middle

  .c
    col()

  @media (max-width: $breakpoint-sm - 1)
    for $col in (1..$cols-number)
      .c{$col}-xs
          width: round((100 / $cols-number * $col)%, 3)
  @media (min-width: $breakpoint-sm)
    for $col in (1..$cols-number)
      .c{$col}
          width: round((100 / $cols-number * $col)%, 3)
  @media (min-width: $breakpoint-md)
    for $col in (1..$cols-number)
      .c{$col}-md
        width: round((100 / $cols-number * $col)%, 3)
  @media (min-width: $breakpoint-lg)
    for $col in (1..$cols-number)
      .c{$col}-lg
        width: round((100 / $cols-number * $col)%, 3)

  .only-lg
    display: none
    @media (min-width: $breakpoint-lg)
      display: initial

  .screen-reader-response
    display: none

  .wpcf7-form-control-wrap
    display: inline-block
    //position: relative

  .wpcf7-not-valid-tip
    display: block
    position: absolute
    font-size: 14px
    line-height: 1.2
    color: $orange
    //top: 100%
    width: 100%

  .wpcf7-response-output
    position: absolute
    font-size: 14px
    line-height: 1.1

