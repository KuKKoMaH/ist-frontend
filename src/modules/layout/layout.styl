@font-face
  font-family: 'Rouble'
  src: url('fonts/Rouble-Regular.eot')
  src: url('fonts/Rouble-Regular.eot') format('embedded-opentype'),
          url('fonts/Rouble-Regular.woff2') format('woff2'),
          url('fonts/Rouble-Regular.woff') format('woff')
  font-weight: normal
  font-style: normal

html
  margin: 0
  padding: 0
  font-family: 'Roboto', sans-serif
  font-size: $font-size
  line-height: $line-height

body
  margin: 0
  padding: 0
  vertical-gradient()

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%

:global
  .r
    font-family: 'Rouble'
    display: inline

  .w
    wrapper()

  .c
    col()

  for $col in (1..$cols-number)
    .c{$col}
      @media (min-width: $breakpoint-sm)
        width: round((100 / $cols-number * $col)%, 3)
