.wrapper
  background: url(modules/choose/bg.jpg) 50% 50% no-repeat
  padding: 5em 0 1em

  @media (max-width: $breakpoint-sm - 1)
    padding : 3em 0 0


.title
  margin: 0 0 2em

  @media (max-width: $breakpoint-lg - 1)
    margin-bottom: 1em

.trigger
  padding: 0 2em 0 7em
  position: relative
  margin-bottom: 4em

  @media (max-width: $breakpoint-md - 1)
    padding: 0 0 0 5em

  &:before
    content: ''
    display: block
    position: absolute
    left: 3em
    top: 0
    transform: translateX(-50%)

  span
    color: $orange
    font-weight: bold

.text
  font-weight: bold
  font-size: 1.1em
  margin-bottom: 1em
  text-transform: uppercase
  line-height: 1.3

.note
  line-height: 1.1

for i in (1..6)
  .trigger-{i}:before
    background: url('modules/choose/icons/sprite-icon' + i + '.svg')