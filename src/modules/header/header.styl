.wrapper
  background: url(modules/header/bg.jpg) 50% 50%
  background-size: cover
  color: $white
  padding: 2em 0 7em

  @media (max-width: $breakpoint-sm - 1)
    padding-bottom: 2em

  :global .wpcf7-response-output
    padding-left: $gutter-half
    margin-top: 15px

.logo
  display: block

.text
  @media (min-width: $breakpoint-sm) and (max-width: $breakpoint-md - 1)
    font-size: .8em

  @media (max-width: $breakpoint-sm - 1)
    display: none

.city
  font-size: .875em
  font-weight: 200

  @media (max-width: $breakpoint-md - 1)
    font-size: .8em

  @media (max-width: $breakpoint-sm - 1)
    text-align: right

.phone
  font-size: 1.25em

  @media (max-width: $breakpoint-md - 1)
    font-size: 1em

  @media (max-width: $breakpoint-sm - 1)
    margin-bottom: 1em
    text-align: right

.form
  font-weight: 200
  font-size: 1.5em
  margin-bottom: 1em

  @media (max-width: $breakpoint-sm - 1)
    font-size: 1em
    line-height: 1.3
